{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "commitType": "build"
    },
    {
      "matchManagers": ["github-actions"],
      "commitType": "ci",
      "pinDigests": true
    }
  ]
}
